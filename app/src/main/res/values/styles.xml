<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/darkstatusbar</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.CountyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DarkTheme" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/darktoolbar</item>
        <item name="colorPrimaryDark">@color/darktoolbar</item>
        <item name="android:navigationBarColor" >@color/darktoolbar</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
        <item name="android:itemBackground">@color/darktoolbar</item>
        <item name="android:windowBackground">@color/darktoolbar</item>
    </style>

    <style name="DarkThemeSettings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#B6B5B5</item>
        <item name="colorPrimary">@color/darktoolbar</item>
        <item name="android:windowBackground">#1F1F1F</item>
        <item name="colorPrimaryDark">@color/darktoolbar</item>
        <item name="android:navigationBarColor" >@color/darktoolbar</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">39dp</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemBackground">@color/maingradient_start_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" >@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@drawable/main_gradient</item>
        <item name="toolbarStyle">@style/ZDToolBar</item>
    </style>

    <style name="ZDToolBar">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/play_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" >@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/main_gradient</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="zx.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/main_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
